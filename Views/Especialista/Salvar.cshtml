@model EspecialistaModel


<form asp-controller="Especialista" asp-action="Create" method="post">
     <div class="row justify-content-center">
        <div class="col-5">
            <div class="card ">
                <div class="card-header text-center">
                    <h2>Cadastro de Usuário</h2>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3"  >
                         <input type="text" asp-for="name" class="form-control" placeholder="Nome">
                    </div>
                    <div class="form-group mb-3"  >
                       <input type="text" asp-for="sobrenome" class="form-control" placeholder="Digite seu sobrenome">
                    </div>
                    <div class="form-group mb-3"  >
                        <input type="text" asp-for="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group mb-3"  >
                        <input type="text" asp-for="senha" class="form-control" placeholder="Senha">
                    </div>
                    <div class="form-group mb-3"  >
                       <input type="text" asp-for="telefone" class="form-control" placeholder="Telefone">
                    </div>
                    <div class="form-group mb-3"  >
                       <input type="text" asp-for="registro" class="form-control" placeholder="CRM">
                    </div>
                     <select name="especialidade" asp-action="BuscarEspecialidade">
                      <% foreach(var in model)
                      {%>
                        <%=Html.actionLink"BuscarEspecialidade",new {id=item.id}  </%>

                      }
                     <option value=1 selected> selecione  a especialidade</option>

                        <option value=2>item.nome</option>
                        <option>43214123</option>
      
                   </select>
                </div>
                <div class="card-footer">
                     <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>

</form>
   
