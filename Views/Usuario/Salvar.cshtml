@{
    Layout = "_LayoutDeslogado";
}

@model UsuarioModel

<form asp-controller="Usuario" asp-action="Salvar" method="post">
    <div class="row justify-content-center mt-5">
        <div class="col-5">
            <div class="card ">
                <div class="card-header text-center">
                    <h2>Cadastro de Usu√°rio</h2>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3"  >
                        <input type="text" asp-for="nomeUsuario" class="form-control" placeholder="Nome">
                    </div>
    
                    <div class="form-group mb-3"  >
                        <input type="text" asp-for="emailUsuario" class="form-control" placeholder="Email">
                    </div>
    
                    <div class="form-group mb-3"  >
                        <input type="password" asp-for="senhaUsuario" class="form-control" placeholder="Senha">
                    </div>
                </div>
                <div class="card-footer">
                     <div class="row">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary">Cadastrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</form>
