@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="nomeUsuario" class="form-control" id="nomeUsuario" placeholder="Digite o nome usuario">
        @Html.ValidationMessageFor(x => x.nomeUsuario)
    </div>
    <div class="mb-3">
        <input type="password" asp-for="senha" class="form-control" id="senha" placeholder="Digite a Senha">
        @Html.ValidationMessageFor(x => x.senha)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>