@{
    Layout ="_LayoutlogadoEspecialista";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Heath.styles.css" asp-append-version="true" />
  

</head>


<div class="d-flex flex-wrap justify-content-center mt-3">

 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  @if (ViewBag.EventList!=null)
                {
    
    @foreach (var item1 in ViewBag.EventList as List<HeathCheck1.Controllers.AgendamentoController.calenderEvent>) {
        
            <div class="card me-3 d-flex" style="max-width: 540px;">
              <div class="row g-1">
                <div class="col-md-2 m-2">
                  <img src="https://cdn-icons-png.flaticon.com/512/147/147144.png" class="img-fluid rounded-start " style="width: 120px">
                </div>
                <div class="col-md-8">
                  <div class="card-body text-center">
                    <h5 class="card-title">@item1.Summary</h5>
                    <p class="card-text fw-bold">Email:</p>
                    <p class="card-text">@item1.Organizer</p>
                    <p class="card-text fw-bold">Descrição:</p>
                    <p class="card-text">@item1.Description</p>
                    <p class="card-text fw-bold">Inicio da Consulta:</p>
                    <p class="card-text">@item1.StartTime</p>
                    <p class="card-text fw-bold">Fim da Consulta:</p>
                    <p class="card-text">@item1.EndTime</p>
                  </div>
                </div>
              </div>
            </div>   
}
}
</div>


 <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
